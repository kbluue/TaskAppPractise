<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="@dimen/img_btn_width"
        android:layout_height="@dimen/img_btn_width"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_left"/>

    <ImageButton
        android:layout_width="@dimen/img_btn_width"
        android:layout_height="@dimen/img_btn_width"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_right"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/img_btn_width"
        android:layout_toEndOf="@id/btn_left"
        android:layout_toStartOf="@id/btn_right"
        android:layout_marginBottom="@dimen/small_margin"
        android:background="@color/transparent"
        android:inputType="none"
        android:selectAllOnFocus="true"
        android:focusableInTouchMode="true"
        android:id="@+id/sub_task"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_thickness"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/default_margin"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/task_divider"/>

</RelativeLayout>